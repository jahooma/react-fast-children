{
	"compilerOptions": {
		"outDir": "./build",
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"declaration": true,
		"lib": ["esnext", "dom"],
		"jsx": "react",
		"rootDir": "src",
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true
	},
	"include": ["src"],
	"types": [
		"react"
	],
	"exclude": [
		"node_modules",
		"**/__tests__/*"
	]
}